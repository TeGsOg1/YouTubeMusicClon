---
import Principal from "../Icons/Principal.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div id="app" class="h-screen w-full gap-2">
      <nav class="[grid-area:nav] bg-green-500"></nav>
      <aside
        class="flex flex-col gap-1 [grid-area:aside] max-w-96 bg-pink-500 border-gray-800"
      >
        <ul>
          <li>
            <a href=""> </a>
          </li>
          <li>
            <a href=""> </a>
          </li>
          <li>
            <a href=""> </a>
          </li>
        </ul>
      </aside>
      <main class="[grid-area:main] bg-red-900">
        <slot />
      </main>
      <footer class="[grid-area:player] bg-blue-500"></footer>
    </div>
  </body>
  <style is:global>
    * {
      box-sizing: border-box;
      padding: 0;
      margin: 0;
    }

    body {
      background: #232323;
    }

    #app {
      display: grid;
      grid-template-areas:
        "nav nav nav"
        "aside main main"
        "player player player";
      grid-template-columns: 1fr 4fr 1fr;
      grid-template-rows: 90px 1fr 80px;
    }
  </style>
</html>
