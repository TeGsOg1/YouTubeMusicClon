---
import Layout from "@/layouts/Layout.astro";
import Musics from "@/components/Musics.astro";
import { playlists } from "@/lib/data";
---

<Layout title="YouTube Music Clon">
  <h1 class="block text-xl md:text-4xl font-bold pl-20 lg:pl-0  text-white">
    YouTube Music Clon
  </h1>
  <div class="flex flex-row overflow-x-auto gap-2 pl-20 lg:pl-0" id="canciones">
    {playlists.map((song) => <Musics song={song} />)}
  </div>
</Layout>