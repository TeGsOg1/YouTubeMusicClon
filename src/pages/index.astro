---
import Layout from "@/layouts/Layout.astro";
import Musics from "@/components/Musics.astro";
import { songs } from "@/lib/songData";
---

<Layout 
description="YouTube Music Clon created with Astro"
title="YouTube Music Clon">
<div class="flex flex-col px-2 gap-4 ">
  <h1 class="block text-xl md:text-4xl font-bold text-white">
    YouTube Music Clon
  </h1>
  <div class="flex flex-row relative overflow-x-auto gap-7 h-full ">
    {songs.map((song) => <Musics song={song} />)}
  </div>
</div>
</Layout>

<style>
  div {
    scrollbar-color: #fff transparent;
  }
</style>