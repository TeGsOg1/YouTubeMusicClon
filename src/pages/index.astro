---
import Layout from "@/layouts/Layout.astro";
import Musics from "@/components/Musics.astro";
import { playlists } from "@/lib/data";
import { PlayerOpenDesk } from "@/components/PlayerOpenDesk";

---

<Layout 
description="YouTube Music Clon created with Astro"
title="YouTube Music Clon">
  <h1 class="block text-xl md:text-4xl font-bold text-white">
    YouTube Music Clon
  </h1>
  <div class="flex flex-row relative overflow-x-auto gap-2 h-full " id="canciones">
    {playlists.map((song) => <Musics song={song} />)}
  </div>
   <PlayerOpenDesk client:load  />
</Layout>

<style>
  div {
    scrollbar-color: #fff transparent;
  }
</style>