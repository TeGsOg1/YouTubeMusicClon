---
import type { GetStaticPaths } from "astro";
import Layout from "@/layouts/Layout.astro";
import { songs } from "@/lib/data";

export const getStaticPaths: GetStaticPaths = () => {
  return songs.map((song) => ({
    params: { id: song.id.toString() },
  }));
};

const { id } = Astro.params;
const song = songs.find((song) => song.id.toString() === id);
---

<Layout title=`YTM Clon ${song?.title}`>
  <div
    class="grid grid-flow-row lg:grid-cols-2 gap-4 w-full h-full items-center justify-items-center"
  >
    <div class="flex flex-col order-2 lg:order-1">
      <img
        src={song?.image}
        alt=""
        transition:name={`${id} image`}
        class="w-[200px] h-auto lg:w-[700px] rounded-xl object-cover aspect-auto"
      />
      <p
        class="text-gray-400 text-xl text-center lg:text-start flex flex-col lg:text-2xl"
        transition:name={`${id} artist`}
      >
        {song?.artists.join(", ")}
      </p>
    </div>
    <div class="order-1 lg:order-2 w-full">
      <h1
        transition:name={`${id} title`}
        class="text-3xl text-wrap lg:text-5xl text-center lg:text-start text-white max-w-90"
      >
        {song?.title}
      </h1>
      <div class=" hidden  h-dvh w-full lg:block lg:w-auto lg:h-[700px] overflow-auto mt-10 rounded-2xl relative bottom-0 justify-start p-4 bg-gradient-to-b from-slate-800 to-slate-1000">
        <p class="text-white text-2xl whitespace-pre-line">
          {song?.lyrics}
        </p>
      </div>
    </div>
  </div>
</Layout>
